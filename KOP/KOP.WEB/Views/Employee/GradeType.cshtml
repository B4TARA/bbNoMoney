@model KOP.WEB.Models.ViewModels.Employee.GradeTypeViewModel

@{
    Layout = null;
}

<div class="user_career_path_container margin_container_bottom">
    <div class="container_description">
        <div class="mid_title">
            Этап оценки
        </div>
        <div class="mid_description">
            Здесь Вы можете отслеживать, на каком этапе оценки Вы находитесь
        </div>
    </div>

    <div class="user_career_path_main_wrapper">
        @for (int i = 0; i < Model.Grades.Count(); i++)
        {
            <div class="career_path_wrapper" onclick="getGradeInfo(@Model.Grades[i].Id, @Model.Grades[i].IsClickable.ToString().ToLower())">
                <span class="path_indicator @Model.Grades[i].HtmlClassName">
                    <i class="fa-solid fa-check accept_path"></i>
                    <i class="fa-solid fa-xmark dismiss_path"></i>
                </span>

                @if (i == 0)
                {
                    <div class="mid_description">
                        Оценка @(Model.Grades[i].Number)
                    </div>
                }
                else
                {
                    <div class="mid_description" style="right:40px;">
                        Оценка @(Model.Grades[i].Number)
                    </div>
                }
            </div>
        }
        <span class="path_line"></span>
    </div>
</div>

    <div id="gradeInfo">
    </div>
